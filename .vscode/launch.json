{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
    {
        "name": "Python Debugger: Current File",
        "type": "debugpy",
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal"
    },
    {
    "name": "Backend (Python)",
    "type": "debugpy",
    "request": "launch",
    "module": "backend.main",
    "justMyCode": false,
    "console": "integratedTerminal"
    },
    {
    "name": "Frontend (React)",
    "type": "node",
    "request": "launch",
    "runtimeExecutable": "npm",
    "runtimeArgs": ["run", "dev"],
    "cwd": "${workspaceFolder}/vocapp-v2",
    "console": "integratedTerminal"
    }
    ],
    "compounds": [
        {
        "name": "Full stack (Backend + Frontend)",
        "configurations": ["Backend (Python)", "Frontend (React)"]
        }
    ]
}